<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings.SettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_barLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageButton
                android:id="@+id/imgbtn_searchuserprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="@string/todo"
                android:foregroundGravity="center"
                android:src="@drawable/ic_back_arrow" />

            <TextView
                android:id="@+id/tv_userid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1.9"
                android:gravity="center|start"
                android:minHeight="?actionBarSize"
                android:padding="10dp"
                android:text="Settings"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

            <ImageButton
                android:id="@+id/option_Menu"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/ic_3_dot_menu"
                android:visibility="gone" />


        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>




    <LinearLayout
        android:id="@+id/ll_passwordchnage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:padding="15dp"
        android:orientation="horizontal"
        android:layout_below="@id/app_barLayout"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:src="@drawable/ic_privacy_policy"
            android:id="@+id/img_passwordchange"/>



        <TextView
            android:id="@+id/passwordchnage_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@id/img_passwordchange"
            android:text="Change Password"
            android:textColor="@color/textColor"
            android:textSize="15sp" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view1"
        android:layout_below="@+id/ll_passwordchnage"
        android:background="@color/textColor"/>


    <LinearLayout
        android:id="@+id/ll_helpandsupport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:padding="15dp"
        android:orientation="horizontal"
        android:layout_below="@id/view1"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:src="@drawable/ic_privacy_policy"
            android:id="@+id/img_helpandsupport"/>



        <TextView
            android:id="@+id/helpandsupport_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@id/img_passwordchange"
            android:text="Help and Support"
            android:textColor="@color/textColor"
            android:textSize="15sp" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view2"
        android:layout_below="@+id/ll_helpandsupport"
        android:background="@color/textColor"/>


    <LinearLayout
        android:id="@+id/ll_blockerlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:padding="15dp"
        android:orientation="horizontal"
        android:layout_below="@id/view2"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:src="@drawable/ic_privacy_policy"
            android:id="@+id/img_blockerlist"/>



        <TextView
            android:id="@+id/pblockerlist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@id/img_blockerlist"
            android:text="BlockerList"
            android:textColor="@color/textColor"
            android:textSize="15sp" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view3"
        android:layout_below="@+id/ll_blockerlist"
        android:background="@color/textColor"/>


    <LinearLayout
        android:id="@+id/ll_deleteaccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:padding="15dp"
        android:orientation="horizontal"
        android:layout_below="@id/view3"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:src="@drawable/ic_delete_account"
            android:id="@+id/img_deleteaccount"/>



        <TextView
            android:id="@+id/deleteaccount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@id/img_deleteaccount"
            android:text="Delete Account"
            android:textColor="@color/textColor"
            android:textSize="15sp" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view4"
        android:layout_below="@+id/ll_deleteaccount"
        android:background="@color/textColor"/>


    <LinearLayout
        android:id="@+id/ll_privacypolicy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:padding="15dp"
        android:orientation="horizontal"
        android:layout_below="@id/view4"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:src="@drawable/ic_help_and_support"
            android:id="@+id/img_privicypolicy"/>



        <TextView
            android:id="@+id/privacypolicy_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@id/img_deleteaccount"
            android:text="Privacy policy"
            android:textColor="@color/textColor"
            android:textSize="15sp" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view5"
        android:layout_below="@+id/ll_deleteaccount"
        android:background="@color/textColor"/>




</RelativeLayout>